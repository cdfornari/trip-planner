{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api-gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/api-gateway",
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "core": {
      "type": "library",
      "root": "libs/core",
      "entryFile": "index",
      "sourceRoot": "libs/core/src",
      "compilerOptions": {
        "tsConfigPath": "libs/core/tsconfig.lib.json"
      }
    },
    "billing": {
      "type": "application",
      "root": "apps/billing",
      "entryFile": "main",
      "sourceRoot": "apps/billing/src",
      "compilerOptions": {
        "tsConfigPath": "apps/billing/tsconfig.app.json"
      }
    },
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "flight-booking": {
      "type": "application",
      "root": "apps/flight-booking",
      "entryFile": "main",
      "sourceRoot": "apps/flight-booking/src",
      "compilerOptions": {
        "tsConfigPath": "apps/flight-booking/tsconfig.app.json"
      }
    },
    "hotel-booking": {
      "type": "application",
      "root": "apps/hotel-booking",
      "entryFile": "main",
      "sourceRoot": "apps/hotel-booking/src",
      "compilerOptions": {
        "tsConfigPath": "apps/hotel-booking/tsconfig.app.json"
      }
    },
    "activity-booking": {
      "type": "application",
      "root": "apps/activity-booking",
      "entryFile": "main",
      "sourceRoot": "apps/activity-booking/src",
      "compilerOptions": {
        "tsConfigPath": "apps/activity-booking/tsconfig.app.json"
      }
    },
    "vehicle-rental": {
      "type": "application",
      "root": "apps/vehicle-rental",
      "entryFile": "main",
      "sourceRoot": "apps/vehicle-rental/src",
      "compilerOptions": {
        "tsConfigPath": "apps/vehicle-rental/tsconfig.app.json"
      }
    },
    "query-api": {
      "type": "application",
      "root": "apps/query-api",
      "entryFile": "main",
      "sourceRoot": "apps/query-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/query-api/tsconfig.app.json"
      }
    },
    "projectors": {
      "type": "application",
      "root": "apps/projectors",
      "entryFile": "main",
      "sourceRoot": "apps/projectors/src",
      "compilerOptions": {
        "tsConfigPath": "apps/projectors/tsconfig.app.json"
      }
    }
  }
}